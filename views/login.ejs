<!-- public/index.html -->
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <base href="/">

    <title>Contacts</title>

    <!-- CSS -->
    <link rel="stylesheet" href="libs/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/style.css"> <!-- custom styles -->

    <!-- JS -->
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js"></script> -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

</head>

<body id="login-body">


      <div class="container-fluid text-center">

        <div class="row">
          <div class="col-xs-12 well col-sm-6 col-sm-offset-3  col-md-4 col-md-offset-4 loginBox">
                  <% if (message.length > 0) { %>
                          <div class="alert alert-danger"><%= message %></div>
                      <% } %>
                  <h2 class="form-signin-heading">Login</h2>
                  <div class="text-left">
                    <form method="post" action="/login">
                      <!-- <label>Username</label> -->
                      <input  required placeholder="Username" name="username" class="form-control" type="text"/><br />
                      <!-- <label>Password</label> -->
                      <input required placeholder="Password" name="password" class="form-control" type="password"/><br />

                        <hr>
                    <div class="row">
                      <div class="col-sm-4 col-xs-12">
                        <button id="submit-login" class="btn btn-primary" type="submit">Login</button>
                      </div>
                      <div class="col-sm-8 col-xs-12" id="lbt-container">
                        <span id="login-bottom-text" class="pull-right">Need an account? &nbsp;<a href="/signup">Sign up</a></span>
                      </div>
                    </div>
                  </form>
                  </div>
                </div>
              </div>

      </div>

</body>

</html>
